{
  "name": "apollo-platform",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm -r dev",
    "build": "pnpm -r build",
    "hub:dev": "pnpm --filter @apollo/hub dev",
    "hub:build": "pnpm --filter @apollo/hub build",
    "sdk:build": "pnpm --filter @apollo/sdk build",
    "shared:build": "pnpm --filter @apollo/shared build"
  },
  "devDependencies": {
    "typescript": "^5.0.0"
  },
  "packageManager": "pnpm@8.0.0"
}
